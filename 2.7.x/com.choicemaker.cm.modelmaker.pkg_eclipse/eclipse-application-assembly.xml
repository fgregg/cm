<assembly>
	<id>eclipse2pkg</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
    <directory>${eclipse.application.dir}</directory>
		<outputDirectory>/</outputDirectory>
		<includes>
        <include>**</include>
		</includes>
		</fileSet>
		<fileSet>
		<directory>${project.build.scriptSourceDirectory}</directory>
		<outputDirectory>/</outputDirectory>
		<includes>
        <include>*.sh</include>
        <include>*.bat</include>
		</includes>
		</fileSet>
	</fileSets>
</assembly>
